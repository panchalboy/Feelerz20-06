        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/search_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_txt" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_color" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:tooltipText="Users" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Users"
                    android:textStyle="normal"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

<!--            <ScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_txt"
                android:paddingBottom="10dp">

                <ListView
                    android:id="@+id/search_result_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingLeft="20dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="3px"
                    tools:listitem="@layout/user_search_list_item"
                    android:footerDividersEnabled="true"
                    android:headerDividersEnabled="true" />

                <Button
                    android:id="@+id/more_button"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="More."
                    android:textColor="@color/color_btn_txt"
                    android:textAllCaps="false"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/more_btn_shape" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Feeling_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_txt" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_color" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:tooltipText="Feelings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feelings"
                        android:textStyle="normal"
                        android:textSize="18dp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:background="@android:color/transparent" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/color_txt"
                    android:paddingBottom="10dp">

                    <ListView
                        android:id="@+id/Feeling_result_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:paddingLeft="20dp"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="3px"
                        tools:listitem="@layout/user_search_list_item"
                        android:footerDividersEnabled="true"
                        android:headerDividersEnabled="true" />

                    <Button
                        android:id="@+id/more_button2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="More."
                        android:textColor="@color/color_btn_txt"
                        android:textAllCaps="false"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="90dp"
                        android:background="@drawable/more_btn_shape" />

                </LinearLayout>

            </LinearLayout>

<!--            </ScrollView>-->

