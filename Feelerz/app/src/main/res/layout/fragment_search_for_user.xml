<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchForUser"
    android:clickable="true"
    android:layout_above="@+id/Main_Btm_Nav" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_txt"
        android:layout_above="@+id/Main_Btm_Nav"
        tools:ignore="UnknownIdInLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_color" />

            <Button
                android:id="@+id/Back_Btn"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_btn_shape3" />

            <SearchView
                android:id="@+id/user_search_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/Back_Btn"
                android:background="@drawable/search_box"
                android:drawableLeft="@drawable/search_icon_shape"
                android:hint="Search"
                android:gravity="center_vertical"
                android:queryHint="Search"
                android:iconifiedByDefault="false" />

        </RelativeLayout>

