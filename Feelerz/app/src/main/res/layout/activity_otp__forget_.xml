<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OTP_Forget_Activity"
    android:background="@drawable/background_color"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Back_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_btn_shape3"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/forgetPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:layout_below="@+id/Back_Btn"
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <View
                android:id="@+id/Line"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heading">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        tools:ignore="ScrollViewSize">

        <RelativeLayout
            android:id="@+id/backlogo"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/feelerz3" />

        <ImageView
            android:id="@+id/LOGO"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:background="@drawable/logo_n"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_OTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LOGO"
            android:textColor="@color/color_txt"
            android:text="Enter OTP"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_OTP"
            android:textSize="15dp"
            android:textColor="#00BCD4"
            android:inputType="number"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_shape" />

        <Button
            android:id="@+id/Submit_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_otp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="Submit"
            android:textSize="15dp"
            android:textColor="@color/color_btn_txt"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Resend_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Submit_otp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="Resend OTP"
            android:textSize="15dp"
            android:textColor="@color/color_btn_txt"
            android:textAllCaps="false"/>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
