<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/popup_corner_radius" >

        <TextView
            android:id="@+id/MsgDlt_Heading_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Logout Confirmation"
            android:textColor="#000"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/MsgDlt_Confirm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CC000000"
            android:textSize="15sp"
            android:text="Are you sure you want to logout?"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        <TextView
            android:id="@+id/cancel_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/Div"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:paddingStart="30dp"
            android:paddingTop="7dp"
            android:paddingEnd="35dp"
            android:textColor="#03A9F4"
            tools:ignore="HardcodedText" />

            <View
                android:id="@+id/Div"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#9E9E9E"
                android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/Delete_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Div"
            android:layout_centerVertical="true"
            android:text="Continue"
            android:textSize="18sp"
            android:paddingBottom="10dp"
            android:paddingStart="35dp"
            android:paddingTop="7dp"
            android:paddingEnd="15dp"
            android:textColor="#03A9F4"
            tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>