<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Real"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:clickable="true"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/R2"
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true" >

    <Button
        android:id="@+id/Close_popup_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/cancelpopup2"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/R2"
        android:background="@drawable/popup_corner_radius">

        <TextView
            android:id="@+id/TXT_LOGIN_ID_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Login Id"
            android:textColor="#2196F3"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/ET_EMAIL_ID_popup"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Login ID"
            android:textColorHint="#C7C6C6"
            android:textSize="15dp"
            android:textColor="#FFF"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_email_shape"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/SUBMIT_LOGIN_ID_popup"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Submit"
            android:textSize="17sp"
            android:textColor="#2196F3"
            android:textAllCaps="false"
            android:background="@drawable/submit_input_email_shape"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>