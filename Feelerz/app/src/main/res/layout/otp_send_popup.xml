<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
    android:clickable="true"
android:layout_height="fill_parent" >

<LinearLayout
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/popup_corner_radius">

    <TextView
        android:id="@+id/Success_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        android:textColor="@color/colorPopupHeading"
        android:textSize="22dp"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text="OTP has been sent."
        android:layout_gravity="center"
        android:layout_below="@+id/error_txt"/>

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/error_message">

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E"/>

    </LinearLayout>

    <TextView
        android:id="@+id/OK_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_gravity="center"
        android:text="OK"
        android:textSize="18dp"
        android:textColor="@color/colorPopupButton"/>

</LinearLayout>

</RelativeLayout>