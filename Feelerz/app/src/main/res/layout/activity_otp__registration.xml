<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTP_RegistrationActivity"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/background_color">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/Back_Btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_btn_shape3"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/OTP_Registration_Title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="OTP"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:layout_below="@+id/Back_Btn"
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <View
                android:id="@+id/Line"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heading">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_height="450dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/feelerz3"
            android:layout_centerInParent="true">
        </LinearLayout>

        <ImageView
            android:id="@+id/LOGO"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo_n"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_OTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LOGO"
            android:textColor="@color/color_txt"
            android:text="Enter OTP"
            android:textSize="13dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/enterOTP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_OTP"
            android:textSize="15dp"
            android:textColor="#00BCD4"
            android:inputType="number"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_shape" />

        <Button
            android:id="@+id/Submit_otpR"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/enterOTP"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="Submit"
            android:textSize="15dp"
            android:textColor="@color/color_btn_txt"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Resend_otpR"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Submit_otpR"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="Resend OTP"
            android:textSize="15dp"
            android:textColor="@color/color_btn_txt"
            android:textAllCaps="false"/>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>