<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportFragment"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/report_background"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        tools:ignore="UselessParent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Give feedback on this post"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:padding="3dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/CloseBTN"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/cancelpopup2"/>

            <TextView
                android:id="@+id/subTitle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="You can also report the post after giving feedback."
                android:textColor="#FFF"
                android:textSize="12sp"
                android:padding="3dp"
                android:layout_below="@+id/title_txt"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <EditText
            android:id="@+id/report_txt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Report Message.."
            android:textSize="15sp"
            android:textColorHint="#CC000000"
            android:textColor="#FFF"
            android:gravity="top"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:layout_margin="20dp"
            android:background="@drawable/update_btn_shape"
            tools:ignore="HardcodedText,RtlSymmetry"
            android:inputType="text" />

        <TextView
            android:id="@+id/Submit_report"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Submit"
            android:textSize="15sp"
            android:textColor="@color/color_txt"
            android:background="@drawable/update_btn_shape"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>