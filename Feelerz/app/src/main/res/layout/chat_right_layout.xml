<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="5dp"

    android:id="@+id/right_chat_rl"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/my_messsage_layout"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:background="@drawable/chat_item_bkg" >

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/message"
                android:paddingRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Hii, afkjafskdjaksfjgfhgfghgfghjkhgfhjhgfhjgfghjaksjfasjfkasdkfj"
                android:textColor="@android:color/white"
                android:maxWidth="300dp"
                android:textSize="15dp"  />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="2dp"
                android:paddingRight="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 H"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:gravity="bottom"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/double_tick2" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
