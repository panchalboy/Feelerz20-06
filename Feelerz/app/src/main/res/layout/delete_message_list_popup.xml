<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/popup_corner_radius"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/MsgDlt_Heading_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete Message Confirmation"
            android:textColor="#000"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/MsgDlt_Confirm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Are you sure you want to delete UserName Messages ?"
            android:textAlignment="center"
            android:textColor="#CC000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9E9E9E" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/cancel_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/Div"
                android:paddingStart="30dp"
                android:paddingTop="7dp"
                android:paddingEnd="35dp"
                android:paddingBottom="10dp"
                android:text="Cancel"
                android:textColor="#03A9F4"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/Div"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="#9E9E9E" />

            <TextView
                android:id="@+id/Delete_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/Div"
                android:paddingStart="35dp"
                android:paddingTop="7dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp"
                android:text="Delete"
                android:textColor="#03A9F4"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>